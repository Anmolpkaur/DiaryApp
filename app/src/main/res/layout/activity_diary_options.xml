<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anmol.diaryapp.DiaryOptions">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See Diary Entries"
        android:drawableLeft="@drawable/diaryicon"
        android:id="@+id/seediary"
        android:layout_alignParentTop="true"
        android:background="#FFFFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:background="#FFFFFFFF"
        android:layout_height="wrap_content"
        android:text="New Diary Entry"
        android:drawableLeft="@drawable/diaryicon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/newentry"

        android:layout_marginTop="10dp"
         />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/pencil"
        android:text="Create To Do List"
        android:id="@+id/createtodo"

        android:layout_marginTop="10dp"
         />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/pencil"
        android:layout_gravity="center_horizontal"
        android:text="See To Do List"
        android:id="@+id/seetodo"

        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/peopleyes"
        android:background="#FFFFFFFF"
        android:text="Add favourite people"
        android:id="@+id/addfav"

        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/peopleyes"
        android:layout_gravity="center_horizontal"
        android:text="See favourite people"
        android:id="@+id/seefav"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/peopleyes"
        android:text="Update Data of person"
        android:id="@+id/updfav"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/peopleyes"
        android:background="#FFFFFFFF"
        android:layout_gravity="center_horizontal"
        android:text="Delete person from list"
        android:id="@+id/delfav"
        android:layout_marginTop="10dp" />


</LinearLayout>
