<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_update_favs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anmol.diaryapp.Update_favs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Name"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textAppearance="@android:style/TextAppearance.Large" />
        />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/namfill"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:text="Quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quality"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/qualityfill2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:text="What do you like about this person?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Description"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"

            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descfill2"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update in favourites list"
        android:drawableLeft="@drawable/peopleyes"
        android:id="@+id/updateperson"
        android:layout_marginBottom="34dp"
        android:background="#FFFFFFFF"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
